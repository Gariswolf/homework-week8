</head>

<body>
    <%- include('component/nav.ejs') %>
    <%- include('component/nav-products.ejs') %>

    <div class="container pt-12 pb-26 py-lg-20">
        <div class="row">
            <div class="col-lg-8 mb-7 mb-lg-0">
                <img src="assets/images/login1.jpg" alt="Login" class="login-img w-100">
            </div>
            <div class="col-lg-4 d-flex justify-content-center align-items-center">
                <form class="w-100">
                    <h2 class="fz-16 font-weight-bold mb-3">Login</h2>
                    <div class="form-group mb-5">
						<label for="account" class="mb-1">帳號</label>
						<input type="email" class="form-control py-2" id="account" aria-describedby="emailHelp" placeholder="email@example.com">
                    </div>
                    <div class="form-group mb-9">
						<label for="password" class="mb-1">密碼</label>
						<input type="password" class="form-control py-2" id="password" placeholder="Password">
					</div>
					<div class="d-flex justify-content-between align-items-center">
						<a href="#" class="color-primary mr-auto">忘記密碼</a>
						<a class="btn mr-2 bg-white border-primary px-4 py-2">註冊</a>
						<a href="member.html" class="btn btn-primary px-4 py-2">登入</a>
					</div>
                    
                  </form>
            </div>
        </div>
    </div>

    <%- include('component/footer.ejs') %>
  

