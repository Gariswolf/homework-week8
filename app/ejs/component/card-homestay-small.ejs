<ul class="list-unstyled row">
    <% for (var i =0; i < homestay_number;  i++ ) { %>
        <li class="col-6 col-xl-4 mb-3 mb-md-5 mb-xl-2">
            <div class="card card-homestay shadow">
                <img class="card-img-top img-fit" src="assets/images/homestay-<%= i+2 %>.jpeg">
                <div class="card-body">
                    <h5 class="card-title"><%= homestay_name[i] %></h5>
                    <div class="d-flex align-items-center card-star fz-8">
                        <%- include('star.ejs') %>
                    </div>
                    <p class="card-text"><%= homestay_info[i] %></p>
                </div>
                <div class="d-flex">
                    <a href="reservation-detail.html" class="btn text-secondary text-center w-50 py-3">聯繫</a>
                    <a class="btn text-tertiary text-center w-50 py-3" data-toggle="modal" data-target="#modalReservation">預約</a>
                </div>
            </div>
        </li>
    <% } %>